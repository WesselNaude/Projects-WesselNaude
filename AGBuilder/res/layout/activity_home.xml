<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@string/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <ListView
        android:id="@+id/menu_content_menulist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.slidelayout.ScrollerLinearLayout
            android:id="@+id/menu_content_side_slide_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menu_content_frame2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical">

                <Button
                    android:id="@+id/main_tmp_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@layout/button"
                    android:minHeight="20dp"
                    android:minWidth="20dp" />

                <FrameLayout
                    android:id="@+id/menu_content_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black" />
            </LinearLayout>
        </com.slidelayout.ScrollerLinearLayout>
    </RelativeLayout>

</FrameLayout>